---
  const { obj } = Astro.props;
---
<div class="box">
  <div class="field">
    <label class="label" for="estadocivil">¿Estado Civil?</label>
    <div class="control">
      <div>
        <select id="estadocivil" name="estadocivil" class="form-select" required>
          <option value="">Seleccione una opción</option>
          {obj.estadocivil === '1' ? <option value="1" selected>Soltera</option> : <option value="1">Soltera</option>}
          {obj.estadocivil === '2' ? <option value="2" selected>Casada</option> : <option value="2">Casada</option>}
          {obj.estadocivil === '3' ? <option value="3" selected>Divorciada</option> : <option value="3">Divorciada</option>}
          {obj.estadocivil === '4' ? <option value="4" selected>Viuda</option> : <option value="4">Viuda</option>}
          {obj.estadocivil === '5' ? <option value="5" selected>Separada</option> : <option value="5">Separada</option>}
          {obj.estadocivil === '6' ? <option value="6" selected>Conviviente</option> : <option value="6">Conviviente</option>}
        </select>
        <div class="invalid-feedback">
          Seleccione su estado civil
        </div>
      </div>
    </div>
  </div>
</div>