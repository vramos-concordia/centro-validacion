---
const { obj } = Astro.props;
---

<div class="box">
  <div class="field">
    <label class="label" for="nivel_escolaridad">¿Nivel de escolaridad?</label>
    <div class="control">
      <div>
        <select id="nivel_escolaridad" name="nivel_escolaridad" class="form-select" required>
          <option value="">Seleccione una opción</option> 
          {obj.nivel_escolaridad === '1' ? <option value="1" selected >Enseñanza media completa</option> : <option value="1">Enseñanza media completa</option> }
          {obj.nivel_escolaridad === '2' ? <option value="2" selected >Enseñanza superior incompleta</option> : <option value="2">Enseñanza superior incompleta</option> }
          {obj.nivel_escolaridad === '3' ? <option value="3" selected >Enseñanza superior completa</option> : <option value="3">Enseñanza superior completa</option> }
          {obj.nivel_escolaridad === '4' ? <option value="4" selected >Técnico completo</option> : <option value="4">Técnico completo</option> }
          {obj.nivel_escolaridad === '5' ? <option value="5" selected >Técnico incompleto</option> : <option value="5">Técnico incompleto</option> }
        </select>
      </div>
    </div>
  </div>
</div>